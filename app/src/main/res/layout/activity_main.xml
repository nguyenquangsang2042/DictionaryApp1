<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layoutmain"
    android:background="@drawable/animation_gradient">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:background="@drawable/backgroud"
        android:layout_margin="20dp"/>

    <RelativeLayout

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/border"
>
        <Button


            android:id="@+id/findBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/borderbutton"
            android:text="Find"
            />

        <Button
            android:layout_marginTop="5dp"

            android:background="@drawable/borderbutton"
            android:id="@+id/worddList_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@id/findBtn"
            android:text="List data word"/>

        <Button
            android:layout_marginTop="5dp"

            android:id="@+id/btn_game_check"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borderbutton"
            android:text="Game "
            android:layout_below="@+id/worddList_btn"/>

        <Button
            android:layout_marginTop="5dp"

            android:padding="20dp"
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_game_check"
            android:background="@drawable/borderbutton"
            android:text="Exit" />
    </RelativeLayout>

    </RelativeLayout>