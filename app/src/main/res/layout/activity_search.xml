<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:id="@+id/layoutSearch"
    android:background="@drawable/animation_gradient"
    >

    <EditText
        android:background="@drawable/border"
        android:id="@+id/Wsearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Write word here" />

    <TextView
        android:id="@+id/showDef"
        android:layout_width="315dp"
        android:layout_height="170dp"
        android:layout_below="@+id/Wsearch"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:background="#ffff"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnFInd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showDef"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:background="@drawable/borderbutton"
        android:onClick="sendRequestOnclick"
        android:text="Find" />

    <Button
        android:id="@+id/btnSave"
        android:background="@drawable/borderbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showDef"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_toStartOf="@+id/btnFInd"
        android:layout_toLeftOf="@+id/btnFInd"
        android:text="save" />

</RelativeLayout>